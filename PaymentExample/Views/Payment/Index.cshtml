@{
    ViewData["Title"] = "Payment";
}

<div>
    <form action="/Payment/CreateCheckout" method="POST">
        <input type="email" name="customerEmail" value="" placeholder="user@PaymentExample.com"/>
        <button class="btn btn-primary" type="submit">Checkout</button>
    </form>

    <br />
    <form action="/Payment/Invoice" method="POST">
        <input type="email" name="customerEmail" value="" placeholder="user@PaymentExample.com"/>
        <button class="btn btn-primary" type="submit">Invoice</button>
    </form>

    <br />
    <section>
      <div class="product">
        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="14px" height="16px" viewBox="0 0 14 16" version="1.1">
            <defs/>
            <g id="Flow" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g id="0-Default" transform="translate(-121.000000, -40.000000)" fill="#E184DF">
                    <path d="M127,50 L126,50 C123.238576,50 121,47.7614237 121,45 C121,42.2385763 123.238576,40 126,40 L135,40 L135,56 L133,56 L133,42 L129,42 L129,56 L127,56 L127,50 Z M127,48 L127,42 L126,42 C124.343146,42 123,43.3431458 123,45 C123,46.6568542 124.343146,48 126,48 L127,48 Z" id="Pilcrow"/>
                </g>
            </g>
        </svg>
        <div class="description">
          <h3>Starter plan</h3>
          <h5>$20.00 / month</h5>
        </div>
      </div>
      <form action="/create-checkout-session" method="POST">
        <input type="email" name="customerEmail" value="" placeholder="user@PaymentExample.com"/>
        <!-- Add a hidden field with the lookup_key of your Price -->
        <input type="hidden" name="lookup_key" value="look_up_starter" />
        <button id="checkout-and-portal-button" type="submit">Buy starter</button>
      </form>

      <br />
      <div class="product">
        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="14px" height="16px" viewBox="0 0 14 16" version="1.1">
            <defs/>
            <g id="Flow" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g id="0-Default" transform="translate(-121.000000, -40.000000)" fill="#E184DF">
                    <path d="M127,50 L126,50 C123.238576,50 121,47.7614237 121,45 C121,42.2385763 123.238576,40 126,40 L135,40 L135,56 L133,56 L133,42 L129,42 L129,56 L127,56 L127,50 Z M127,48 L127,42 L126,42 C124.343146,42 123,43.3431458 123,45 C123,46.6568542 124.343146,48 126,48 L127,48 Z" id="Pilcrow"/>
                </g>
            </g>
        </svg>
        <div class="description">
          <h3>Premium plan</h3>
          <h5>$100.00 / month</h5>
        </div>
      </div>
      <form action="/create-checkout-session" method="POST">
          <input type="email" name="customerEmail" value="" placeholder="user@PaymentExample.com"/>
        <!-- Add a hidden field with the lookup_key of your Price -->
        <input type="hidden" name="lookup_key" value="look_up_plan" />
        <button id="checkout-and-portal-button" type="submit">Buy premium</button>
      </form>
    </section>
</div>